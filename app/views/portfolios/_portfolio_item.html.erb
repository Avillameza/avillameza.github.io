<div class="col">
    <div class="card shadow-sm">
        <%= image_tag portfolio_item.thumb_image.url unless portfolio_item.thumb_image.nil? %>

        <div class="card-body">
            <p class="card-text">
                <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
                <%= portfolio_item.subtitle %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin)%></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)%></button>
                </div>
                <small class="text-muted">9 mins</small>
            </div>
        </div>
    </div>
</div>